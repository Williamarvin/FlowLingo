# FlowLingo Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database_name
PGDATABASE=your_database_name
PGHOST=your_database_host
PGPASSWORD=your_database_password
PGPORT=5432
PGUSER=your_database_user

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Object Storage Configuration (Replit)
PUBLIC_OBJECT_SEARCH_PATHS=/replit-objstore-your-bucket-id/public
PRIVATE_OBJECT_DIR=/replit-objstore-your-bucket-id/.private

# Session Configuration (Optional - defaults will be used if not provided)
SESSION_SECRET=your-secret-session-key-minimum-32-characters-long

# Application Environment (Optional)
NODE_ENV=development
PORT=5000